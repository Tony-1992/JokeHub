
@model CreateCategoryViewModel


@{
    ViewData["Title"] = "Create category";
}


<partial name="../Shared/Components/_GoHome" />


<form method="post">
    <div class="mb-3">
        <label class="col-form-label-sm">Category name</label>
        <input class="form-control form-control-sm" type="text" asp-for="@Model.Name">
        <span asp-validation-for="@Model.Name" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-sm btn-primary">Confirm category</button>
</form>