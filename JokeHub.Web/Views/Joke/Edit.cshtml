@model EditJokeViewModel



@{
    ViewData["Title"] = "Edit joke";
}


<partial name="../Shared/Components/_GoHome" />


<form method="post">
    <div class="mb-3">
    <label class="col-form-label-sm">Joke id</label>
    <input disabled class="form-control form-control-sm" type="text" asp-for="@Model.Id">
    <span asp-validation-for="@Model.Id" class="text-danger small"></span>
  </div>

  <div class="mb-3">
    <label class="col-form-label-sm">Joke setup</label>
    <input class="form-control form-control-sm" type="text" asp-for="@Model.Setup">
    <span asp-validation-for="@Model.Setup" class="text-danger small"></span>
  </div>
  
  <div class="mb-3">
    <label class="col-form-label-sm">Joke punchline</label>
    <input class="form-control form-control-sm" type="text" asp-for="@Model.PunchLine">
    <span asp-validation-for="@Model.PunchLine" class="text-danger small"></span>
  </div>

    <div class="mb-3">
        <label class="col-form-label-sm">Joke category</label>
        <select class="form-select" asp-items="@Model.Categories" asp-for="@Model.CategoryId">
            <option>-- Select category --</option>
        </select>
    </div>

  <button type="submit" class="btn btn-sm btn-primary">Confirm joke</button>
</form>
