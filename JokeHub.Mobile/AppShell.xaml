<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JokeHub.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:JokeHub.Mobile.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{DynamicResource Primary}"
    Shell.TabBarTitleColor="{DynamicResource Primary}"
    Shell.TabBarBackgroundColor="#FAFAFA">


    <TabBar>
        <ShellContent Title="Jokes"
                     Icon="magnifying_glass.svg"
                     ContentTemplate="{DataTemplate pages:MainPage}" />
        <ShellContent Title="Settings"
                     Icon="settings.svg"
                     ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>

</Shell>
